<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <File name="LogToFile" fileName="logs/log.txt">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="LogToFile" />
        </Root>
        <Root level="info">
            <AppenderRef ref="LogToFile" />
        </Root>
    </Loggers>
</Configuration>
